@model FutsalHoi.Models.PemesananModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pemesanan Baru</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Buat pemesanan baru untuk memesan lapangan.</h4>
        <hr />
        @if (@TempData["Error"] != null)
        {
            <div class="alert alert-dismissible alert-danger" style="opacity: 0.8">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                @TempData["Error"]
            </div>
        }
        

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Tanggal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tanggal, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", @type = "date", @required=true} })
                @Html.ValidationMessageFor(model => model.Tanggal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JamMulai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.JamMulai, new { htmlAttributes = new { @class = "form-control", @type="time", @required = true } })
                @Html.ValidationMessageFor(model => model.JamMulai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JamSelesai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.JamSelesai, new { htmlAttributes = new { @class = "form-control", @type="time", @required = true } })
                @Html.ValidationMessageFor(model => model.JamSelesai, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.IDLapangan, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IDLapangan, ViewBag.LapanganList as SelectList, "--Pilih Lapangan--", new { @class = "form-control", @required = true })
                @Html.ValidationMessageFor(model => model.IDLapangan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Buat" class="btn btn-sm btn-success" />
                <a href="@Url.Action("Index","Pemesanan")" class="btn btn-sm btn-danger">Batal</a>
            </div>
        </div>
    </div>
}

