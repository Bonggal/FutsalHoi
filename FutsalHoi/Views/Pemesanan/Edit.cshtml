@model FutsalHoi.Models.PemesananModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Perbaharui Pesanan</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @if (@TempData["Error"] != null)
        {
            <div class="alert alert-dismissible alert-danger" style="opacity: 0.8">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                @TempData["Error"]
            </div>
        }
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDPemesanan)

        <div class="form-group">
            @Html.LabelFor(model => model.Tanggal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tanggal, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.Tanggal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JamMulai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.JamMulai, new { htmlAttributes = new { @class = "form-control", @type="time" } })
                @Html.ValidationMessageFor(model => model.JamMulai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.JamSelesai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.JamSelesai, new { htmlAttributes = new { @class = "form-control", @type="time" } })
                @Html.ValidationMessageFor(model => model.JamSelesai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDLapangan, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IDLapangan, ViewBag.LapanganList as SelectList, "--Pilih Lapangan--",new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.IDLapangan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Simpan" class="btn btn-sm btn-success" />
                <a href="@Url.Action("Detail", "Pemesanan", new { @id = Convert.ToInt32(Model.IDPemesanan) })" class="btn btn-sm btn-danger">Batal</a>
            </div>
        </div>
    </div>
}

