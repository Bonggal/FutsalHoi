
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pengguna</h2>
@TempData["msg"]
@Session["message"]
<table id="lapangan" class="table table-striped table-bordered">
    <tr>
        <th>Nama Pengguna</th>
        <th>Jenis Pengguna</th>
        <th>Email</th>
        <th>Status</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][2] @Model.Rows[i][3]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][6]</td>
            <td>@Model.Rows[i][5]</td>
            <td style="text-align: center">
                @if (Model.Rows[i]["Status"] == "Aktif")
                {
                    <a class="btn btn-xs btn-danger" href="@Url.Action("Blokir","Pengguna", new {@id = Model.Rows[i]["IDAkun"] })" onclick="return confirm('Apakah Anda yakin ingin memblokir akun ini?');">
                        Blokir
                    </a>
                }
                else
                {
                    <a class="btn btn-xs btn-success" href="@Url.Action("Unblok","Pengguna", new {@id = Model.Rows[i]["IDAkun"] })" onclick="return confirm('Apakah Anda yakin ingin mengaktifkan akun ini?');">
                        Aktifkan
                    </a>
                }
            </td>
        </tr>
    }
</table>