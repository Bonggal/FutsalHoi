<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/datatable/dataTables.bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color: #f2f2f2">
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FutsalHoi", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["id"] != null)
                    {
                        <li>
                            <a href="@Url.Action("Index","Pemesanan")">
                                Pemesanan
                            </a>
                        </li>
                        if (Session["type"].ToString() == "Admin")
                        {
                            <li>@Html.ActionLink("Pelanggan", "Index", "Pengguna")</li>
                        }
                    }
                    <li>@Html.ActionLink("Lapangan", "Index", "Lapangan")</li>
                    <li>@Html.ActionLink("Kontak", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="background-color: white">
        <div style="min-height:100vh">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FutsalHoi Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/scripts/datatable/datatables.bootstrap.min.js"></script>
    <script src="~/scripts/datatable/jquery-3.3.1.js"></script>
    <script src="~/scripts/datatable/jquery.datatables.min.js"></script>
</body>
</html>
